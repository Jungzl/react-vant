  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2019",
    "outDir": "./lib",
    "module": "ESNext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
