{
  "private": true,
  "packageManager": "pnpm",
  "scripts": {
    "build": "pnpm build --dir ./packages/react-vant",
    "build:site": "pnpm build:site --dir ./packages/react-vant",
    "release:site": "pnpm release:site --dir ./packages/react-vant",
    "changelog": "lerna exec --scope react-vant yarn changelog",
    "dev": "pnpm dev --dir ./packages/react-vant",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-vant/cli": "workspace:*"
  },
  "devDependencies": {
    "@react-vant/eslint-config": "workspace:*",
    "@react-vant/stylelint-config": "workspace:*",
    "all-contributors-cli": "^6.20.0",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sort-package-json": "^1.53.1",
    "stylelint": "^14.3.0"
  }
}
